<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/textView1"
        android:background="#ffff323b" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/textView2"
        android:layout_alignParentRight="true"
        android:textColor="#ffcc00"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView1"
        android:background="@android:color/holo_orange_dark"
        android:id="@+id/view1"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image01"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/view1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"

        android:layout_alignParentRight="@+id/image01"

        android:layout_alignTop="@+id/image01"
        android:layout_toRightOf="@+id/image01"
        android:layout_toEndOf="@+id/image01" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"

        android:text="所在地点:   新西兰       北远"
        android:id="@+id/textView4"
        android:textSize="14dp"
        android:layout_below="@+id/image01"
        android:layout_centerHorizontal="true"
        android:textColor="#ff10ffcd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="时间：       2018.8.8    9:56"
        android:textSize="14dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:textColor="#ff19ffdc" />

</RelativeLayout>